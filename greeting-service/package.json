{
  "name": "nodejs-circuit-breaker-greeting",
  "version": "1.0.0",
  "author": "Red Hat, Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tape test/*.js | tap-spec",
    "test:integration": "tape test/integration/*.js | tap-spec",
    "test:integration:undeploy": "nodeshift --strictSSL=false undeploy",
    "lint": "eslint test/*.js lib/*.js bin/* app.js",
    "prepare": "nsp check && license-reporter report",
    "coverage": "istanbul cover tape test/*.js",
    "dependencyCheck": "szero . --ci",
    "release": "standard-version",
    "openshift": "nodeshift --strictSSL=false --nodeVersion=8.x --metadata.out=nodeshift-metadata.json",
    "postinstall": "license-reporter report && license-reporter save --xml licenses.xml",
    "start": "PORT=8080 node ./bin/www"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bucharest-gold/nodejs-circuit-breaker.git"
  },
  "files": [
    "package.json",
    "LICENSE",
    "bin",
    "lib",
    "public",
    "app.js",
    "licenses"
  ],
  "bugs": {
    "url": "https://github.com/bucharest-gold/nodejs-circuit-breaker/issues"
  },
  "homepage": "https://github.com/bucharest-gold/nodejs-circuit-breaker",
  "devDependencies": {
    "debug": "~3.1.0",
    "eslint": "^4.17.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-standard": "^3.0.1",
    "nodeshift": "^1.3.0",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "openshift-config-loader": "~0.4.0",
    "openshift-rest-client": "~0.11.0",
    "rhoaster": "0.0.2",
    "standard-version": "^4.3.0",
    "supertest": "~3.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0"
  },
  "gitHubUser": "lance",
  "description": "demonstrates a generic pattern for reporting the failure of a service and then limiting access to the failed service until it becomes available to handle requests.",
  "keywords": [
    "circuitbreaker",
    "circuit",
    "failfast",
    "openshift",
    "resiliency"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.0",
    "kube-probe": "~0.3.0",
    "license-reporter": "^1.1.3",
    "opossum": "~1.2.1",
    "roi": "~0.15.0",
    "ws": "~3.3.2"
  }
}
