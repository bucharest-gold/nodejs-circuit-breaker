{
  "name": "nodejs-circuit-breaker-greeting",
  "version": "2.1.1",
  "author": "Red Hat, Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tape test/integration/*.js | tap-spec",
    "lint": "xo",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "start": "node .",
    "prepublish": "license-reporter report -s",
    "openshift": "nodeshift --strictSSL=false --imageTag=10.x --metadata.out=nodeshift-metadata.json",
    "postinstall": "license-reporter report -s && license-reporter save -s --xml licenses.xml"
  },
  "main": "./bin/www",
  "xo": {
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nodeshift-starters/nodejs-circuit-breaker.git"
  },
  "files": [
    "package.json",
    "LICENSE",
    "bin",
    "lib",
    "public",
    "app.js",
    "licenses"
  ],
  "bugs": {
    "url": "https://github.com/nodeshift-starters/nodejs-circuit-breaker/issues"
  },
  "homepage": "https://github.com/nodeshift-starters/nodejs-circuit-breaker",
  "devDependencies": {
    "istanbul": "~0.4.5",
    "nodeshift": "~3.0.0",
    "nyc": "~13.3.0",
    "rhoaster": "^0.2.0",
    "supertest": "^4.0.0",
    "tap-spec": "~5.0.0",
    "tape": "~4.10.1",
    "xo": "~0.24.0"
  },
  "gitHubUser": "lance",
  "description": "demonstrates a generic pattern for reporting the failure of a service and then limiting access to the failed service until it becomes available to handle requests.",
  "keywords": [
    "circuitbreaker",
    "circuit",
    "failfast",
    "openshift",
    "resiliency"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "4.16.4",
    "kube-probe": "~0.3.1",
    "license-reporter": "^1.2.0",
    "opossum": "~1.10.1",
    "roi": "~0.18.0",
    "ws": "~6.2.0"
  }
}
